{
  "name": "magarcia.io",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "react-router dev",
    "build": "react-router build && NODE_ENV=production tsx scripts/generate-og-images.ts && NODE_ENV=production tsx scripts/generate-sitemap.ts && NODE_ENV=production tsx scripts/generate-rss.ts && cp _redirects build/client/_redirects && cp _headers build/client/_headers && cp public/robots.txt build/client/robots.txt",
    "build:ci": "yarn typecheck && yarn lint && yarn test:unit && yarn build && yarn test:unit:build",
    "serve": "yarn build && npx serve build/client",
    "start": "react-router-serve ./build/client/index.html",
    "lint": "eslint app --ext .ts,.tsx && prettier --check .",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "test:unit": "vitest run --exclude 'tests/unit/rss-validation.test.ts' --exclude 'tests/unit/scripts/sitemap.test.ts'",
    "test:unit:watch": "vitest --exclude 'tests/unit/rss-validation.test.ts' --exclude 'tests/unit/scripts/sitemap.test.ts'",
    "test:unit:build": "vitest run --config vitest.config.build.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "@mdx-js/react": "^3.0.1",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-toast": "^1.2.15",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@react-router/node": "^7.9.5",
    "@react-router/serve": "^7.9.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "gray-matter": "^4.0.3",
    "isbot": "^5.1.0",
    "lucide-react": "^0.554.0",
    "motion": "^12.26.2",
    "murmurhash3js": "^3.0.1",
    "prism-react-renderer": "^1.3.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-feather": "^2.0.9",
    "react-markdown": "^10.1.0",
    "react-router": "^7.9.5",
    "reading-time": "^1.5.0",
    "rehype-raw": "^7.0.0",
    "satori": "^0.18.3",
    "sharp": "^0.34.5",
    "slugify": "^1.6.5",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "ua-parser-js": "^1.0.33"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@mdx-js/rollup": "^3.0.1",
    "@playwright/test": "^1.56.1",
    "@react-router/dev": "^7.9.5",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jsdom": "^27",
    "@types/markdown-it": "^14.0.1",
    "@types/node": "^24.10.1",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@types/rss": "^0.0.32",
    "@types/sharp": "^0.32.0",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitest/coverage-v8": "^4.0.15",
    "autoprefixer": "^10.4.2",
    "baseline-browser-mapping": "^2.9.12",
    "eslint": "^8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "fast-xml-parser": "^5.3.2",
    "feed": "^4.2.2",
    "globby": "^11",
    "husky": "^9.1.7",
    "jsdom": "^27.2.0",
    "lint-staged": "^16.2.7",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^8.4.1",
    "postcss": "^8.4.6",
    "postcss-nesting": "^12.1.2",
    "prettier": "^3.2.5",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-slug": "^6.0.0",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.0",
    "rss": "^1.2.2",
    "tailwindcss": "^3.0.22",
    "tsx": "^4.7.1",
    "typescript": "^5.4.5",
    "vite": "^7",
    "vitest": "^4.0.15"
  },
  "packageManager": "yarn@4.1.1",
  "lint-staged": {
    "*": "prettier --write --ignore-unknown"
  },
  "resolutions": {
    "glob": "^10.5.0",
    "qs": "^6.14.1",
    "mdast-util-to-hast": "^13.2.1",
    "gray-matter/js-yaml": "^3.14.2",
    "eslint/js-yaml": "^4.1.1",
    "@eslint/eslintrc/js-yaml": "^4.1.1",
    "tar": "^7.5.7",
    "lodash": "^4.17.23"
  }
}
